<% include ../partials/header %>
<h1>Welcome to our countries app!</h1>
<a href="/countries/new">Add a new country</a>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Capital</th>
      <th>Population</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>

    <% countries.forEach(function(country){ %>
      <tr>
      <td><a href="/countries/<%= country.id%>"><%= country.name%></a></td>
      <td><%= country.capital%></td>
      <td><%= country.population%></td>
      <td><a href="/countries/<%= country.id%>/edit">Edit</a></td>
      <td>
        <form action='/countries/<%= country.id %>?_method=DELETE' method="POST">
          <input type="submit" value="X" class="btn btn-sm btn-danger">
        </form>
      </td>
    </tr>
    <% })%>
  </tbody>
</table>
<% include ../partials/footer %>